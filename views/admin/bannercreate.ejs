<body>
   
    <div class="container-fluid mt-5">
        <div class="row">
          <div class="col-sm-12 right">
            <div class="fline">
              <h2 class="w-50 mx-auto my-2">Create Banner</h2>
            </div>
      
            <form action="/addbanner" method="post" enctype="multipart/form-data" class="banner-form">
              <input class="w-50 mx-auto my-3 form-control" type="text" placeholder="Banner title" name="title" id="title">
              <span class="text-danger d-flex justify-content-center align-items-center" id="titleError"></span>
              <input class="w-50 mx-auto my-3 form-control" type="text" placeholder="Banner description" name="description" id="description" >
              <span class="text-danger d-flex justify-content-center align-items-center" id="descriptionError"></span>
              <input class="w-50 mx-auto my-3 form-control" type="file" name="image" id="imageInput" required onchange="previewImage(event)">
              <div class="image-preview">
                <img id="preview" src="#" alt="Selected Image" style="display: none;">
              </div>
              <button class="w-50 login mx-auto my-3 form-control" type="submit" id="submitButton">ADD</button>
            </form>
          </div>
        </div>
      </div>

