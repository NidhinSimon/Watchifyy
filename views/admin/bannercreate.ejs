<style>
   .banner-form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.banner-form input[type="text"],
.banner-form input[type="file"],
.banner-form button {
  width: 50%;
  margin: 10px auto;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.banner-form button {
  background-color: #4caf50;
  color: #fff;
  cursor: pointer;
}

.banner-form button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}

.text-danger {
  color: red;
  font-size: 14px;
}

.image-preview {
  width: 50%;
  margin: 10px auto;
  text-align: center;
}

.image-preview img {
  max-width: 100%;
  max-height: 200px;
