                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Product Image</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Brand</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach(function(x, i) { %>
                  <tr>
                    <td class="truncate">
                      <div class="tooltip" title="<%= x.productName %>">
                        <% if (x.productName) { %>
                        <%= x.productName %>
                        <% } else { %>
                        <span class="default-text">Default Name</span>
                        <% } %>
                        <span class="tooltiptext">
                          <%= x.productName %>
                        </span>
                      </div>
                    </td>
                    <td>
                        <div class="image-container">
                          <% x.images.forEach(function(image) { %>
                            <div class="image-wrapper">
                              <img src="/uploads/<%= image %>" alt="Product Image" class="zoom-image">
                            </div>
                          <% }); %>
                        </div>
                      </td>
                    <td class="truncate">
                      <div class="tooltip" title="<%= x.description %>">
                        <% if (x.description) { %>
                        <%= x.description %>
                        <% } else { %>
                        <span class="default-text">Default Description</span>
                        <% } %>
                        <span class="tooltiptext">
                          <%= x.description %>
                        </span>
                      </div>
                    </td>
                    <td>
                      <%= x.categoryData.category %>
                    </td>
                    <td>
                      <%= x.price %>
                    </td>
                    <td>
                      <%= x.stock %>
                    </td>
                    <td>
                      <%= x.brand %>
                    </td>
                    <td>
                      <% if (x.isDeleted === false) { %>
                      <button class="buttons unlist-btn">
                        <a href="/admin/product/deleteproduct/<%= x._id %>">UNLIST</a>
                      </button>
                      <% } else { %>
                      <button class="buttons list-btn">
                        <a href="/productlist/<%= x._id %>">LIST</a>
                      </button>
                      <% } %>
                      <a href="/admin/editproduct/<%= x._id %>" class="action-button edit-button">
                        <i class="fas fa-edit"></i> Edit
                      </a>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
