  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #fff;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .screen {
      position: relative;
      width: 380px;
      background-color: #fff;
      border-radius: 20px;
      box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .screen__content {
      padding: 60px 30px;
    }

    .screen__content form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .screen__content .error-message {
      color: red;
      margin-bottom: 10px;
      text-align: center;
    }

    .screen__content .login__field {
      position: relative;
      width: 100%;
      margin-bottom: 20px;
    }

    .screen__content .login__field i {
      position: absolute;
      top: 50%;
      left: 16px;
      transform: translateY(-50%);
      color: #999;
    }

    .screen__content .login__input {
      width: 100%;
      padding: 12px 40px 12px 50px;
      border: 1px solid #ddd;
      border-radius: 25px;
      font-size: 16px;
      color: #555;
    }

    .screen__content .field-error {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }

    .screen__content .login__submit {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 12px 20px;
      margin-top: 20px;
      border-radius: 25px;
      background-color: #6c63ff;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .screen__content .login__submit:hover {
      background-color: #524dff;
    }

    .screen__content .login__submit .button__text {
      margin-right: 10px;
    }

    .screen__content .login__submit .button__icon {
      margin-left: 10px;
    }

    .screen__content .links-container {
      margin-top: 20px;
      text-align: center;
    }

    .screen__content .links-container a {
      color: #999;
      font-size: 14px;
      text-decoration: none;
      margin: 0 10px;
    }

    .screen__background {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background: linear-gradient(135deg, #fff 0%, #f2f2f2 100%);
      clip-path: circle(120% at right 65%);
    }

    .screen__background__shape1,
    .screen__background__shape2,
    .screen__background__shape3,
    .screen__background__shape4 {
      position: absolute;
      display: block;
      background-color: #fff;
    }

    .screen__background__shape1 {
      top: -60px;
      right: 0;
      width: 100px;
      height: 100px;
      border-radius: 50%;
    }

    .screen__background__shape2 {
      top: 50%;
      left: 50px;
      width: 200px;
      height: 200px;
      border-radius: 50%;
    }

    .screen__background__shape3 {
      bottom: 50px;
      left: -80px;
      width: 120px;
      height: 120px;
      border-radius: 50%;
    }

    .screen__background__shape4 {
      bottom: 0;
      right: -100px;
      width: 400px;
      height: 400px;
      border-radius: 50%;
    }

    @media (max-width: 480px) {
      .screen {
        width: 100%;
      }
    }
    .screen__background__shape2 {
  top: 50%;
  left: 50px;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background-image: url("path/to/your/watch-image.png");
