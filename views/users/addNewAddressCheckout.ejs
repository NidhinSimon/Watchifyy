<body>
  <% if(typeof user !="undefined" ){ %>
    <%-include('userlogged') %>
      <%}else{%>
        <%-include('usernotlogged') %>
          <%}%>
  
          <div class="container" style="background-color: white;font-family: 'Poppins Medium', sans-serif;margin-top: 86px;padding: 20px;">
            <div class="card">
              <div class="card-header">
                <h2 style="text-align: center; color: #333;">Account Details</h2>
              </div>
              <div class="form-container" style="padding: 20px;">
                <form method="post" action="/checkout-address">
          
                  <div class="form-group">
                    <label for="inputUsername">Full Name</label>
                    <input class="form-control" id="inputUsername" type="text" name="name" placeholder="Enter your full name" required>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6">
                        <label for="inputFirstName">Mobile</label>
                        <input class="form-control" name="mobile" id="inputFirstName" type="text" placeholder="Enter your mobile number" required>
                      </div>
                      <div class="col-md-6">
                        <label for="inputLastName">State</label>
                        <input class="form-control" id="inputLastName" name="state" type="text" placeholder="Enter your state" required>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6">
                        <label for="inputOrgName">Address</label>
                        <input class="form-control" id="inputOrgName" name="address" type="text" placeholder="Enter your house name" required>
                      </div>
                      <div class="col-md-6">
                        <label for="inputLocation">City</label>
                        <input class="form-control" id="inputLocation" name="city" type="text" placeholder="Enter your city" required>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6">
                        <label for="inputPhone">Email</label>
                        <input class="form-control" name="email" id="inputPhone" type="email" placeholder="Enter your email" required>
                      </div>
                      <div class="col-md-6">
                        <label for="inputBirthday">ZIP</label>
                        <input class="form-control" id="inputBirthday" type="number" name="pincode" placeholder="Enter your pincode" required>
                      </div>
                    </div>
                  </div>
                  <div class="form-group" style="text-align: center;">
                    <button class="btn btn-primary" value="submit" type="submit" style="width: 150px;">Add Address</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
          
          
</body>

</html>
